{% extends "layout.jinja2" %}
{% block content %}
<br/><br/><br/><br/><br/><br/>
<link rel = "stylesheet" href = "/static/styles/forms.css"/>
<div id = "wrapper">


{% for message in get_flashed_messages() %}
    <div class="alert alert-warning">
    <button
        type="button"
        class="close"
        data-dismiss="alert">
        x
        </button>
    {{ message }}
    </div>
{% endfor %}

<h1>Schedule a meeting with {{ name }}</h1>

<form method = "POST" action = "{{ url_for('get_to_know_request', id=id)}}" enctype = "multipart/form-data">
{{ form.csrf_token }}

<fieldset class="time">
    {{ form.time.label }}<br/>
    {{ form.time }}
    {% if form.time.errors %}
        <ul class="errors">
        {% for error in form.time.errors %}
            <li>{{ error }}</li>{% endfor %}
        </ul>
    {% endif %}
</fieldset>

<fieldset class="message">
    {{ form.message.label }}
    {{ form.message }}
    {% if form.message.errors %}
        <ul class="errors">
        {% for error in form.message.errors %}
            <li>{{ error }}</li>{% endfor %}
        </ul>
    {% endif %}
</fieldset>

<div class = "submit-button">
  {{ form.submit }}
</div>
</form>
</div><br/><br/><br/><br/><br/>
{% endblock %}